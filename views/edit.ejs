<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit List Item</title>
    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&family=Shadows+Into+Light&display=swap" rel="stylesheet">
    <!-- ICONS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <!-- STYLESHEET LINK -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <section class="todo-container">
        <h1>To Do List</h1>
        <section class="todo">
            <ul class="todo-list">
                <% todoTasks.forEach(data => { %>
                    <% if (data._id == idTask) { %>
                        <li class='todo-list-item'>
                            <form action="/edit/<%= data._id %>" method="POST">
                                <input type="text" name="title" value="<%= data.title %>">
                                <textarea rows="6" cols="45" name="content"><%= data.content %></textarea>
                                <div class="confirm-cancel">
                                    <button type="submit" class="confirm">Confirm</button>
                                    <a href="/" class="cancel">Cancel</a>
                                </div>
                            </form>
                        </li>
                    <li class="todo-list-item">
                        <div class="todo-list-item-title">
                            <%= data.title %>
                        </div>
                        <div class="todo-list-item-content">
                            <%= data.content %>
                        </div>
                        <div class="buttons">
                            <a href="/edit/<%=data._id %>" class="edit"><span class="fas fa-edit"></span></a>
                            <a href="/remove/<%=data._id %>" class="remove"><span class="fas fa-times"></span></a>
                        </div>
                    </li>
                    <% } else { %>
                        <li class="todo-list-item">
                            <div class="todo-list-item-title">
                                <%= data.title %>
                            </div>
                            <div class="todo-list-item-content">
                                <%= data.content %>
                            </div>
                            <div class="buttons">
                                <a href="/edit/<%=data._id %>" class="edit"><span class="fas fa-edit"></span></a>
                                <a href="/remove/<%=data._id %>" class="remove"><span class="fas fa-times"></span></a>
                            </div>
                        </li>
                    <% } %>
                <% }) %>
            </ul>
        </section>
    </section>
</body>
</html>